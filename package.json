{
  "name": "storefront_backend",
  "version": "0.1.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "watch": "tsc-watch --esModuleInterop src/index.ts --outDir ./build --onSuccess \"node ./build/index.js\"",
    "build": "tsc",
    "start": "tsc && node build/index.js",
    "migration": "db-migrate",
    "jasmine": "jasmine-ts  --config=./spec/support/jasmine.json",
    "test": "export NODE_ENV=test  && db-migrate up --config ./database.json -e test && tsc && yarn jasmine && db-migrate down",
    "lint": "eslint . --ext .ts",
    "format": "yarn lint --fix"
  },
  "author": "Mohammed Elzanaty",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "db-migrate": "^0.11.12",
    "db-migrate-pg": "^1.2.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "jasmine": "^3.7.0",
    "jasmine-spec-reporter": "^7.0.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "pg": "^8.6.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/helmet": "^4.0.0",
    "@types/jasmine": "^3.6.3",
    "@types/jsonwebtoken": "^8.5.2",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.12.2",
    "@types/pg": "^8.6.0",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "jasmine-ts": "^0.3.0",
    "prettier": "^2.3.1",
    "ts-node": "^10.0.0",
    "tsc-watch": "^4.4.0",
    "typescript": "^4.3.2"
  }
}
